<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tl_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/selector_click"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:id="@+id/itemImage1"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/daminghu"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/itemName1"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemImage1"
            android:text="大明湖"

            android:textSize="23dp"/>
        <TextView
            android:id="@+id/itemState1"
            android:layout_marginTop="15dp"
            android:layout_below="@id/itemName1"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/itemImage1"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="点击查看全景图"/>

    </RelativeLayout>

</LinearLayout>